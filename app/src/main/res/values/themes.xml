<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BreakBuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/contrast</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutro_claro</item>
        <item name="colorSecondaryVariant">@color/neutro_oscuro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Titulo ActionBar -->
        <item name="actionBarStyle">@style/Widget.BreakBuddy.ActionBar</item>
    </style>

    <!-- Estilo ActionBar -->
    <style name="Widget.BreakBuddy.ActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="titleTextStyle">@style/TextAppearance.App.TitleLarge</item>
    </style>

</resources>