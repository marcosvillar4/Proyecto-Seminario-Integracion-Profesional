<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- 0) Defino el estilo “base” TextAppearance.App (puede heredar de AppCompat o Material) -->
    <style name="TextAppearance.App" parent="TextAppearance.AppCompat.Body1">
        <!-- aquí podrías fijar, por ejemplo, el textColor común -->

    </style>

    <!-- 1) Título Principal Grande (Bold 700 / 24sp) -->
    <style name="TextAppearance.App.TitleLarge">
        <!-- Apunta directamente al TTF de Poppins-Bold (peso 700) -->
        <item name="android:fontFamily">@font/poppins_bold</item>
        <!-- Tamaño 24sp -->
        <item name="android:textSize">@dimen/text_size_title_large</item>

    </style>

    <!-- 2) Título Principal Mediano (SemiBold 600 / 22sp) -->
    <style name="TextAppearance.App.TitleMedium">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_size_title_medium</item>

    </style>

    <!-- 3) Subtítulo / Label Importante Grande (Medium 500 / 18sp) -->
    <style name="TextAppearance.App.SubtitleLarge">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_size_subtitle_large</item>

    </style>

    <!-- 4) Subtítulo / Label Importante Mediano (Medium 500 / 16sp) -->
    <style name="TextAppearance.App.SubtitleMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_size_subtitle_medium</item>

    </style>

    <!-- 5) Texto de Párrafo / Cuerpo (Regular 400 / 14sp) -->
    <style name="TextAppearance.App.Body">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_size_body</item>

    </style>

    <!-- 6) Texto Auxiliar / Notas (Light 300 / 12sp) -->
    <style name="TextAppearance.App.Auxiliary">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/text_size_auxiliary</item>
    </style>

    <style name="MissionDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_fade_in</item>
        <item name="android:windowExitAnimation">@anim/scale_fade_out</item>
    </style>

    <style name="MissionDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/MissionDialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--Emojis checkin-->
    <style name="EmojiOption">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


</resources>