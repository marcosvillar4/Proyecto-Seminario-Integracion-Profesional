<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.groups.GroupsFragment">

    <!-- BotÃ³n Crear Grupo -->
    <Button
        android:id="@+id/btnCreateGroup"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:text="CREAR GRUPO"
        style="@style/TextAppearance.App.SubtitleMedium"
        android:textColor="@color/white"
        android:backgroundTint="@color/green_500"
        android:padding="12dp"
        app:cornerRadius="16dp"
        android:textAllCaps="true"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ver Todos los Grupos -->
    <Button
        android:id="@+id/btnViewAllGroups"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:text="VER GRUPOS"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Banner de anuncios fijo abajo -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-7467173777372011/4567587890"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>