<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_notifications"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/neutro_intermedio">

    <!-- Modo descanso -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDoNotDisturb"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modo descanso (silenciar todos)"
        android:textAllCaps="false"
        app:icon="@drawable/ic_do_not_disturb"
        app:iconTint="@color/red_500"
        app:strokeColor="@color/red_500"
        app:strokeWidth="2dp"
        app:cornerRadius="8dp"
        android:textColor="@color/red_500"/>

    <!-- Espacio pequeÃ±o -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <!-- Scroll con las filas -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llRows"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>
