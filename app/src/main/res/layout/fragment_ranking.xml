<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Guideline para separar status bar y dejar algo de margen superior -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStatusBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="50dp"
        android:orientation="horizontal"/>

    <!-- Mensaje cuando no hay datos -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay miembros para mostrar"
        android:textSize="18sp"
        android:textColor="@color/gray_300"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <!-- Recycler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRanking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@id/guidelineStatusBar"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
