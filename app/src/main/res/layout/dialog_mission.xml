<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="420dp"
    android:background="@drawable/bg_card_white"
    android:padding="24dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Título de la Misión"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/green_500"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción clara y motivadora de lo que tenés que hacer."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:maxWidth="280dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTemporizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completando..."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/contrast"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnListo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¡Lo logré!"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green_500"
        android:enabled="false"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        app:cornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvTemporizador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
