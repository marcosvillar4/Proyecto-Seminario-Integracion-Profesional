<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.groups.JoinGroupFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCodigoGrupo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            tools:text="CÃ³digo de Grupo"
            style="@style/TextAppearance.App.SubtitleMedium"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnUnirse"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="UNIRSE A GRUPO"
        style="@style/TextAppearance.App.SubtitleMedium"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity= "center"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutCodigoGrupo" />
</androidx.constraintlayout.widget.ConstraintLayout>