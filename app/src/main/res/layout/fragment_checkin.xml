<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutCheckin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cómo te sentiste hoy?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/emojiContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Emojis como botones de selección -->
            <TextView android:id="@+id/emoji1" style="@style/EmojiOption" android:text="😃" />
            <TextView android:id="@+id/emoji2" style="@style/EmojiOption" android:text="🙂" />
            <TextView android:id="@+id/emoji3" style="@style/EmojiOption" android:text="😐" />
            <TextView android:id="@+id/emoji4" style="@style/EmojiOption" android:text="🙁" />
            <TextView android:id="@+id/emoji5" style="@style/EmojiOption" android:text="😞" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:layout_marginTop="24dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>