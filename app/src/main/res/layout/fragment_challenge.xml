<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Título del desafío -->
    <TextView
        android:id="@+id/tvTituloDesafio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Desafío!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Instrucción -->
    <TextView
        android:id="@+id/tvInstruccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instrucción detallada del reto"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloDesafio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para marcar como completado -->
    <Button
        android:id="@+id/btnCompletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Lo logré!"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvInstruccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
